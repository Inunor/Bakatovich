<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginBottom="@dimen/medium_margin">

        <LinearLayout
            android:id="@+id/standard_layout_radio_cover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:padding="@dimen/small_padding"
            android:background="@drawable/borders"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/standard_layout_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/standard_layout"
                android:checked="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/standard_portrait"
                android:textSize="@dimen/medium_font"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/standard_landscape"
                android:textSize="@dimen/medium_font"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dense_layout_radio_cover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            android:padding="@dimen/small_padding"
            android:background="@drawable/borders"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/dense_layout_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dense_layout"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dense_portrait"
                android:textSize="@dimen/medium_font"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dense_landscape"
                android:textSize="@dimen/medium_font"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
